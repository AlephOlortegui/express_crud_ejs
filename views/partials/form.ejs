        <div class="row">
            <div class="col">
                <button type="submit" class="w-100 btn btn-info btn-lg">Submit</button>
            </div>
            <div class="col">
                <a href="/" class="w-100 btn btn-danger btn-lg">Cancel</a> 
            </div>
        </div>
    </div>
<% } %>